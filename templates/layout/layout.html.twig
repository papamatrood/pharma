<!DOCTYPE html>
<html >
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pharma{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" /> 
        <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />                
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
        {% block stylesheets %}
          
        <style>
          body {
            /*background-image: url("{{ asset('images/logo.jpg') }}");*/
            background-color: #cccccc;
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Do not repeat the image */
            background-size: cover; 
          }
        </style>
        {% endblock %}
    </head>
    <body {% block angularJS %}{% endblock %}>
      <nav class="navbar navbar-expand-md navbar-dark bg-success mb-4">
        <a class="navbar-brand pb-2" href="{{ path('main') }}">Pharma</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item dropdown active ">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Fichier
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink01">
                  {% if is_granted('IS_AUTHENTICATED_FULLY') != true %}
                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>  
                  {% else %}
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
                  {% endif %}
                <div class="dropdown-divider"></div>
                <li><a class="dropdown-item quitter" href="#" >Quitter</a></li>  
              </ul>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Fournisseurs
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink02">
                  <li><a class="dropdown-item" href="{{ path('fournisseurs_new') }}">Ajout</a></li>          
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('fournisseurs_index') }}">Liste Fournisseurs</a></li>
                  <li><a class="dropdown-item" href="{{ path('commandes_new') }}">Commandes Fournisseurs</a></li>          
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('livraison_list') }}">Livraison des Produits</a></li>
                </ul>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink020" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Produits
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink020">
                  <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="#">Ajout</a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="{{ path('familles_new') }}">Famille Produits</a></li>
                      <li><a class="dropdown-item" href="{{ path('produits_new') }}">Produit</a></li>
                    </ul>
                  </li>
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('produits_index') }}">Produits Disponibles</a></li>
                  <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="#">Prouits Périmés</a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="{{ path('produits_encours') }}">En Cours</a></li>
                      <li><a class="dropdown-item" href="{{ path('produits_perimes') }}">Périmés</a></li>
                    </ul>
                  </li>
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('stock') }}">Mouvement de Stock</a></li>
                </ul>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Vente
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink03">
                  <li><a class="dropdown-item" href="{{ path('clients_new') }}">Ajout Client</a></li>          
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('ventes_new') }}">Opération de Vente</a></li>
                  <li><a class="dropdown-item" href="{{ path('ventes_index') }}">Produits Vendus</a></li>          
                  <li><a class="dropdown-item" href="{{ path('ventes_jour') }}">Ventes du jour</a></li>          
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('ventes_index') }}">Retour sur Vente</a></li>
                </ul>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Personnel
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink04">
                  <li><a class="dropdown-item" href="{{ path('employes_new') }}">Ajout Employé</a></li>          
                  <li><a class="dropdown-item" href="{{ path('salaires_new') }}">Créé une Fiche de Salaire</a></li>
                  <div class="dropdown-divider"></div>
                  <li><a class="dropdown-item" href="{{ path('employes_pdf') }}">Liste du Personnel</a></li>          
                  <li><a class="dropdown-item" href="{{ path('salaries_pdf') }}">Liste de Paie</a></li>
                </ul>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink05" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Comptabilité
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink05">
                  <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="#">Gestion des Règlements</a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="#">Règlement Fournisseur</a></li>
                      <li><a class="dropdown-item" href="#">Règlement Client</a></li>
                    </ul>
                  </li>
                  <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="#">Caisse</a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="{{ path('caisse_approvisionnement') }}">Approsivionnement</a></li>
                      <li><a class="dropdown-item" href="{{ path('caisse_depense') }}">Dépense</a></li>
                      <li><a class="dropdown-item" href="{{ path('caisse_pdf') }}">Situation</a></li>
                    </ul>
                  </li>
                </ul>
              </li>    
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Administration
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink02">
                  <li><a class="dropdown-item" href="{{ path('utilisateurs_index') }}">Créer un Utilisateur</a></li> 
                  <li><a class="dropdown-item" href="{{ path('privileges') }}">Gestion des Privilèges</a></li>
                </ul>
              </li>
            {% endif %} 
          </ul>
        </div>
      </nav>



      <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                    {{ message }}
            </div>
        {% endfor %}


        {% block body %}{% endblock %}
      </div>


        
        <script  src="{{ asset('js/jquery.js') }}" ></script>
        <script  src="{{ asset('js/popper.min.js') }}" ></script>
        <script  src="{{ asset('js/bootstrap.min.js') }}" ></script>

        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        <script  src="{{ asset('js/style.js') }}" ></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
