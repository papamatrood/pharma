{% extends 'layout/layout.html.twig' %}

{% block title %}Ajouter une famille{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 bg-success p-3 text-white">
            <h3>Ajouter une famille</h3>

            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
        </div>
        <div class="col-md-8 bg-light p-3">
            <h3>Liste des familles</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for famille in familles %}
                    <tr>
                        <td>{{ famille.code }}</td>
                        <td>{{ famille.nom }}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('familles_edit', {'id': famille.id}) }}"><i class="far fa-edit"></i></a>
                            <a class="btn btn-outline-danger" href="{{ path('familles_delete', {'id': famille.id}) }}">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
