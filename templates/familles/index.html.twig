{% extends 'base.html.twig' %}

{% block title %}Familles index{% endblock %}

{% block body %}
    <h1>Familles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for famille in familles %}
            <tr>
                <td>{{ famille.id }}</td>
                <td>{{ famille.code }}</td>
                <td>{{ famille.nom }}</td>
                <td>
                    <a href="{{ path('familles_show', {'id': famille.id}) }}">show</a>
                    <a href="{{ path('familles_edit', {'id': famille.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('familles_new') }}">Create new</a>
{% endblock %}
