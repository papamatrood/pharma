{% extends 'layout/layout.html.twig' %}

{% block title %}S'identifier!{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <form method="post" class="loginForm">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-5 font-weight-normal">Veuillez vous connecter</h1>
            <label for="inputNomUtilisateur">Nom d'utilisateur</label>
            <input type="text" value="{{ last_username }}" name="nomUtilisateur" id="inputNomUtilisateur" class="form-control" required autofocus>
            <label class=" mt-3" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-primary mt-3" type="submit">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
